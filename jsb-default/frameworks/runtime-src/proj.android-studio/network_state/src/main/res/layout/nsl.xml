<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nsl_notification_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/nsl_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/nsl_bg"
        android:gravity="center"
        android:paddingBottom="@dimen/nsl_padding"
        android:paddingTop="@dimen/nsl_padding"
        android:text="@string/nsl_no_internet"
        android:textColor="@color/nsl_text" />
</LinearLayout>